@model CommunityApp.Pages.Cities.EditModel

<h2>Edit City</h2>

<form method="post">
    <input type="hidden" asp-for="City.CityId" />

    <label>City Name</label>
    <input type="text" asp-for="City.CityName" required />

    <label>Population</label>
    <input type="number" asp-for="City.Population" required />

    <label>Province Code</label>
    <select asp-for="City.ProvinceCode" asp-items="@Model.ProvinceList" required>
        <option value="">-- Select Province --</option>
    </select>

    <button type="submit" class="btn btn-success">Save Changes</button>
</form>
<a asp-page="./Index">Back to List</a>
