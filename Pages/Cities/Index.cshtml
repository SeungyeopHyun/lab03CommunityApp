@page
@model CommunityApp.Pages.Cities.IndexModel

<h2>City List</h2>

<table class="table">
    <thead>
        <tr>
            <th>City Name</th>
            <th>Population</th>
            <th>Province</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var city in Model.Cities)
        {
            <tr>
                <td>@city.CityName</td>
                <td>@city.Population</td>
<td>@(city.Province?.ProvinceName ?? "Unknown")</td>

                <td>
<a asp-page="./Edit" asp-route-id="@city.CityId">Edit</a>
<form method="post" asp-page-handler="Delete" asp-route-id="@city.CityId" onsubmit="return confirm('Are you sure?');">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="./Create">Add New City</a>
