@page
@model CommunityApp.Pages.Provinces.IndexModel

<h2>Provinces</h2>

<table class="table">
    <thead>
        <tr>
            <th>Province Code</th>
            <th>Province Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var province in Model.ProvinceList)
        {
            <tr>
                <td>@province.ProvinceCode</td>
                <td>@province.ProvinceName</td>
                <td>
                    <a asp-page="./Edit" asp-route-provinceCode="@province.ProvinceCode" class="btn btn-primary">Edit</a>
                    
                    <form method="post" asp-page="./Index" asp-page-handler="Delete" asp-route-provinceCode="@province.ProvinceCode" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="./Create" class="btn btn-success">Add New Province</a>
